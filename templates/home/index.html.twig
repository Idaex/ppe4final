    <div class="container-fluid" >
        <div class="row">
            <div class="col-sm-3" style="margin-top: 75px;">
                <div class="container border-custom-little font-fam-courrier">
                    <div class='row'>
                        <div>
                            {% for cat in categories%}
                                <h4>
                                    <a href="{{ path('home', { 'categorie': cat.getCatLibelle }) }}" 
                                       class="btn-transparent">
                                        {{ cat.getCatLibelle }}
                                    </a>
                                </h4>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-8 offset-1 " style="margin-top: 50px;">
                <div class="container-fluid font-fam-courrier" >

                    <h1 class="title" style="color:black" >Les produits</h1>
                    <hr>
                    <div class="container-fluid">
                        <div class="row">
                            {% for produit in produits %}
                                {% if produit.getProStock > 0 %}
                                    <div class="col-sm-3">
                                        <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
                                            <a href="{{ path('produit', { 'id': produit.getProId }) }}" >
                                                <img class="card-img-top" height="200"  src="{{produit.getProImage}}" alt="Card image cap">
                                                <a/>
                                                <div class="card-body">
                                                    <p class="card-text">{{produit.getProNom}} {{produit.getProPrix}} euros </p>
                                                    <a href="{{ path('produit', { 'id': produit.getProId }) }}" class="btn btn-secondary">Infos</a>
                                                    <a class="btn btn-dark" href="{{ path('ajoutPanierFromHome', { 'id': produit.getProId }) }}" >
                                                        <i class="fas fa-shopping-basket"></i></a>
                                                </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {%endfor%}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


